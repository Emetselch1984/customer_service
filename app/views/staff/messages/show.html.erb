<% @title = "メッセージ詳細" %>
<h1><%= @title %></h1>

<div class="table-wrapper">
  <% if @message.kind_of?(CustomerMessage) %>
  <div class="links">
    <%= link_to "返信する", new_staff_message_reply_path(@message) %>
  </div>
  <% end %>
  <table class="attributes">
    <tr><th>種類</th><td><%= @message.decorate.type %></td></tr>
    <tr><th>送信者</th><td><%= @message.decorate.sender %></td></tr>
    <tr><th>受信者</th><td><%= @message.decorate.receiver %></td></tr>
    <tr><th>件名</th><td><%= @message.decorate.subject %></td></tr>
    <tr><th>作成⽇時</th><td class="date"><%= @message.decorate.created_at %></td></tr>
  </table>

  <div class="tree"><%= @message.decorate.tree %></div>
  <div class="body"><%= @message.decorate.formatted_body %></div>

</div>