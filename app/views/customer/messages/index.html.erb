<% @title = "受信メッセージ⼀覧" %>
<h1><%= @title %></h1>

<div class="table-wrapper">
  <%= paginate @messages %>

  <table class="listing">
    <tr>
      <th>送信者</th>
      <th>件名</th>
      <th>作成⽇時</th>
      <th>アクション</th>
    </tr>
    <% @messages.each do |m| %>
      <tr>
        <td><%= m.decorate.sender %></td>
        <td><%= m.decorate.truncated_subject %></td>
        <td><%= m.created_at %></td>
        <td class="actions">
          <%= link_to "詳細", customer_message_path(m) %>
          <%= link_to "削除", customer_message_path(m), method: :delete,
            data: { confirm: "本当に削除しますか？ " } %>
        </td>
      </tr>
    <% end %>
  </table>

<%= paginate @messages %>
</div>